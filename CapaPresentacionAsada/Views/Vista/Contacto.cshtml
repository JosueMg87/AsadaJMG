@{
    ViewBag.Title = "Contacto";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section>
    <div class="container-fluid px-5 my-5">
        <div class="row">
            <!-- Carrusel a la izquierda -->
            <div class="col-md-8">
                <div class="row">
                    <div class="col-md-12">
                        <div class="card mb-4">
                            <div class="card-body text-center">
                                <h5 class="card-title">@ViewBag.Nombre5</h5>
                                <p class="card-text"><i class="fas fa-map-marker-alt fa-1x text-primary"></i> @ViewBag.Descripcion15</p>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-12">
                        <div class="card mb-4">
                            <div class="card-body text-center">
                                <h5 class="card-title mb-3"><i class="fas fa-envelope fa-1x text-primary">
                                     </i> @ViewBag.Nombre14: @ViewBag.Descripcion14</h5>
                                <h5 class="card-title mb-3"><i class="fas fa-phone fa-1x text-primary">
                                     </i> @ViewBag.Nombre13: @ViewBag.Descripcion13</h5>
                                <h5 class="card-title mb-3"><i class="fab fa-facebook fa-1x text-primary">
                                     </i> @ViewBag.Nombre12: @ViewBag.Descripcion12</h5>
                                <h5 class="card-title mb-3"><i class="fab fa-whatsapp fa-1x text-primary">
                                     </i> @ViewBag.Nombre16: @ViewBag.Descripcion16</h5>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Contenido a la derecha -->
            <div class="col-md-4">
                <div class="row">
                    <div class="col-md-12">
                        <div class="card mb-4">
                            <div class="card-body text-center">
                                <i class="fas fa-tint fa-3x mb-3 text-primary"></i>
                                <h5 class="card-title">@ViewBag.Nombre7</h5>
                                <p class="card-text">@ViewBag.Descripcion7</p>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-12">
                        <div class="card mb-4">
                            <div class="card-body text-center">
                                <i class="fas fa-leaf fa-3x mb-3 text-success"></i>
                                <h5 class="card-title">@ViewBag.Nombre8</h5>
                                <p class="card-text">@ViewBag.Descripcion8</p>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-12">
                        <div class="card mb-4">
                            <div class="card-body text-center">
                                <i class="fas fa-hands-helping fa-3x mb-3 text-warning"></i>
                                <h5 class="card-title">@ViewBag.Nombre9</h5>
                                <p class="card-text">@ViewBag.Descripcion9</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

</section>
