<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">

    @Styles.Render("~/Content/css")
</head>
<body class="d-flex flex-column min-vh-100">
    <nav class="navbar navbar-expand-lg navbar-custom">
        <div class="container">
            <a class="navbar-brand" href="#">@ViewBag.Nombre5</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item"><a class="nav-link" aria-current="page" href="@Url.Action("Index","Vista")">Inicio</a></li>
                    <li class="nav-item"><a class="nav-link" aria-current="page" href="@Url.Action("Anuncio","Vista")">Anuncios</a></li>
                    <li class="nav-item"><a class="nav-link" aria-current="page" href="@Url.Action("Reportes","Vista")">Reportes</a></li>
                    <li class="nav-item"><a class="nav-link" aria-current="page" href="@Url.Action("Historial","Vista")">Historia</a></li>
                    <li class="nav-item"><a class="nav-link" aria-current="page" href="@Url.Action("Contacto","Vista")">Contacto</a></li>
                </ul>
            </div>
        </div>
    </nav>
    @RenderBody()
    <footer class="bg-dark text-white mt-4">
        <div class="bg-light text-dark text-center py-3">
            <p class="mb-0">&copy; 2024 JMG Technology. Todos los derechos reservados.</p>
        </div>
    </footer>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
